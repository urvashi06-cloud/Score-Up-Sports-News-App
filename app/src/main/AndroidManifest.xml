<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.scoreup">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".ui.activities.ReminderActivity"
            android:label=""
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.activities.SettingsActivity"
            android:label=""
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.NewsDisplayActivity"
            android:label=""
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.ChoicesActivity"
            android:label=""
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.ForgotPasswordActivity"
            android:label=""
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.RegisterActivity"
            android:label=""
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.LogInActivity"
            android:screenOrientation="portrait" />

        <receiver android:name=".receivers.NotificationReceiver" />
    </application>

</manifest>