<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorInvisible"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="5dp">

    <ProgressBar
        android:id="@+id/pb_dp_progress_bar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_dp_please_wait" />

    <com.example.scoreup.utils.SUTextViewLight
        android:id="@+id/tv_dp_please_wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/please_wait_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/pb_dp_progress_bar"
        android:textSize="23sp"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/colorThemeSecondaryText"/>


</androidx.constraintlayout.widget.ConstraintLayout>