<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.SplashScreenActivity"
    android:background="@color/colorThemePrimaryText">

    <ImageView
        android:id="@+id/iv_ss_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/score_up_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_ss_title"
        app:layout_constraintVertical_chainStyle="packed"/>

    <com.example.scoreup.utils.SUTextViewHeading
        android:id="@+id/tv_ss_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorThemeSecondaryText"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/iv_ss_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="40sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>